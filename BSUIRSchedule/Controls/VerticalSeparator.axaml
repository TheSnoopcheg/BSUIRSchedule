<ResourceDictionary xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:BSUIRSchedule.Controls">
  
  <Design.PreviewWith>
    <StackPanel Width="400" Spacing="10">      
        <StackPanel Background="{DynamicResource SystemRegionBrush}">
          <controls:VerticalSeparator />
        </StackPanel>
    </StackPanel>
  </Design.PreviewWith>
 
  <ControlTheme x:Key="{x:Type controls:VerticalSeparator}" TargetType="controls:VerticalSeparator">
	  <Setter Property="Background" Value="{DynamicResource Border.Static.Title.Separator}" />
	  <Setter Property="Focusable" Value="False" />
	  <Setter Property="Width" Value="1"/>
	  <Setter Property="VerticalAlignment" Value="Stretch" />
	  <Setter Property="Template">
		  <ControlTemplate>
			  <Border Padding="{TemplateBinding Margin}"
					  Height="{TemplateBinding Height}"
					  Width="{TemplateBinding Width}"
					  HorizontalAlignment="{TemplateBinding HorizontalAlignment}"
					  VerticalAlignment="{TemplateBinding VerticalAlignment}"
					  BorderBrush="{TemplateBinding BorderBrush}"
					  BorderThickness="{TemplateBinding BorderThickness}"
					  CornerRadius="{TemplateBinding CornerRadius}"
					  Background="{TemplateBinding Background}" />
		  </ControlTemplate>
	  </Setter>
  </ControlTheme>
</ResourceDictionary>
